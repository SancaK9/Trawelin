    <MudDivider />


    <MudNavLink Icon="@Icons.Material.Filled.Hotel" Href="/hotels">@_localizer["Hotels"]</MudNavLink>

    <MudNavGroup Title="@_localizer["Definitions"]" Icon="@Icons.Material.Filled.EditNote" Expanded="false">
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/countryDefinition">@_localizer["Regions"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/hotelCategories">@_localizer["Categories"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/hotelRoomAccomodationType">@_localizer["AccomodationType"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/hotelRoomTypes">@_localizer["RoomType"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/hotelAccomodation">@_localizer["Accomodations"]</MudNavLink>
