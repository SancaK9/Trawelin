    </MudNavGroup>

    <MudNavLink Icon="@Icons.Material.Filled.Monitor" Href="/stopfreesale">@_localizer["StopFreeSale"]</MudNavLink>

    <MudDivider />

    <MudNavLink Icon="@Icons.Material.Filled.SettingsSuggest" Href="/operation">@_localizer["Operations"]</MudNavLink>

    <MudDivider Class="my-2" />

    <MudNavGroup Title="@_localizer["Settings"]" Icon="@Icons.Material.Filled.Settings" Expanded="false">
        <MudNavLink Icon="@Icons.Material.Filled.SupervisedUserCircle" Href="/users">@_localizer["Users"]</MudNavLink>

        <MudNavLink Icon="@Icons.Material.Filled.SettingsAccessibility" Href="/suppliersdefinition">@_localizer["Suppliers"]</MudNavLink>
    </MudNavGroup>
    <MudNavLink Icon="@Icons.Material.Filled.ExitToApp" Href="/users">@_localizer["LogOut"]</MudNavLink>
</MudNavMenu>

@code {
    private string Username { get; set; }
    private string Email { get; set; }
    protected override async Task OnInitializedAsync()
    {
        Username = await _localStorage.GetItemAsync<string>(StorageConstants.Local.userUsername);
        Email = await _localStorage.GetItemAsync<string>(StorageConstants.Local.userEmail);
    }
}