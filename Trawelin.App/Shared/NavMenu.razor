@inject Microsoft.Extensions.Localization.IStringLocalizer<NavMenu> _localizer
<MudNavMenu>
    <MudListSubheader Class="mt-2 mb-n2">@_localizer["HomeTitle"]</MudListSubheader>
    <MudNavLink Icon="@Icons.Material.Filled.Dashboard" Href="/index">@_localizer["Dashboard"]</MudNavLink>

    <MudListSubheader Class="mt-2 mb-n2">@_localizer["ReservationTitle"]</MudListSubheader>
    <MudNavLink Icon="@Icons.Material.Filled.Assignment">@_localizer["Rezervations"]</MudNavLink>



    @*Nav Hotel Section*@

    <MudListSubheader Class="mt-2 mb-n2">@_localizer["HotelTitle"]</MudListSubheader>

    <MudNavLink Icon="@Icons.Material.Filled.Hotel" Href="/hotel">@_localizer["Hotels"]</MudNavLink>

    <MudNavGroup Title="@_localizer["Definitions"]" Icon="@Icons.Material.Filled.EditNote" Expanded="false">
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/countryDefinition">@_localizer["Regions"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/hotelCategories">@_localizer["Categories"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/hotelRoomAccomodationType">@_localizer["AccomodationType"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/hotelRoomTypes">@_localizer["RoomType"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/hotelAccomodation">@_localizer["Accomodations"]</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="/hotelTypes">@_localizer["HotelType"]</MudNavLink>
    </MudNavGroup>

    <MudNavLink Icon="@Icons.Material.Filled.Monitor" Href="/hotel">@_localizer["StopFreeSale"]</MudNavLink>


    @*Nav Operation Section*@
    <MudListSubheader Class="mt-2 mb-n2">@_localizer["OperationTitle"]</MudListSubheader>
    <MudNavLink Icon="@Icons.Material.Filled.SettingsSuggest">@_localizer["Operations"]</MudNavLink>




    <MudDivider Class="my-2" />

    <MudNavGroup Title="@_localizer["Settings"]" Icon="@Icons.Material.Filled.Settings" Expanded="false">
        <MudNavLink Icon="@Icons.Material.Filled.SupervisedUserCircle" Href="/users">@_localizer["Users"]</MudNavLink>

        <MudNavLink Icon="@Icons.Material.Filled.SettingsAccessibility" Href="/suppliersdefinition">@_localizer["Suppliers"]</MudNavLink>
    </MudNavGroup>
    <MudNavLink Icon="@Icons.Material.Filled.ExitToApp" Href="/users">@_localizer["LogOut"]</MudNavLink>
</MudNavMenu>

@code {
    private string Username { get; set; }
    private string Email { get; set; }
    protected override async Task OnInitializedAsync()
    {
        Username = await _localStorage.GetItemAsync<string>(StorageConstants.Local.userUsername);
        Email = await _localStorage.GetItemAsync<string>(StorageConstants.Local.userEmail);
    }

    

}