@using Trawelin.App.Infrastructure.Settings
@using Trawelin.App.Shared.Components
@inherits LayoutComponentBase

<MudRTLProvider RightToLeft="@_rightToLeft">
<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="25">
        <MudImage Src="logo.png"></MudImage>

        <MudToolBar DisableGutters="true">
            <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" Class="ml-3" />
        </MudToolBar>

        <MudSpacer />


        <MudIconButton Icon="@Icons.Material.Outlined.Notifications" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Outlined.PushPin" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Outlined.PeopleAlt" Color="Color.Inherit" />
        <MudDivider Vertical="true"/>
        <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="@((e) => DarkMode())" />
        <MudTooltip Text="RTL">
            <MudIconButton Icon="@Icons.Material.Filled.FormatTextdirectionRToL" Color="Color.Inherit" OnClick="@((e) => RightToLeftToggle())" />
        </MudTooltip>
        <LanguageSelector />
        <MudMenu OffsetX="true" Dense="true" Class="mt-1 ml-4">
            <ActivatorContent>

                <MudAvatar Color="Color.Secondary">S</MudAvatar>

            </ActivatorContent>
            <ChildContent>
                <UserCard Class="mt-n2" />
                <MudDivider Class="mb-2" />
                <MudListItem Text="Profile" Href="/account" Icon="@Icons.Material.Outlined.Person" />

            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="25" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-10">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
</MudRTLProvider>
@code {
    private MudTheme _theme = new();
    private bool _isDarkMode;
    bool _drawerOpen = false;

    private bool _rightToLeft = false;
   
    protected override async Task OnInitializedAsync()
    {
        _theme = BlazorTheme.DefaultTheme;
        _theme = await _clientPreferenceManager.GetCurrentThemeAsync();
        _rightToLeft = await _clientPreferenceManager.IsRTL();
        
    }

    private async Task RightToLeftToggle()
    {
        var isRtl = await _clientPreferenceManager.ToggleLayoutDirection();
        _rightToLeft = isRtl;

    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }


    private async Task DarkMode()
    {
        bool isDarkMode = await _clientPreferenceManager.ToggleDarkModeAsync();
        _theme = isDarkMode
            ? BlazorTheme.DefaultTheme
            : BlazorTheme.DarkTheme;
    }

  

}