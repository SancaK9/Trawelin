
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            Create Country?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@createCountryCommand.Name" Label="Isim" />
        <MudTextField @bind-Value="@createCountryCommand.Code" Label="Kod" />
        <MudTextField @bind-Value="@createCountryCommand.IsoCode" Label="IsoKod" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="CreateCountry">Ekle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    public CreateCountryCommand createCountryCommand { get; set; } = new CreateCountryCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void CreateCountry()
    {
        MudDialog.Close(DialogResult.Ok(createCountryCommand));
    }
}