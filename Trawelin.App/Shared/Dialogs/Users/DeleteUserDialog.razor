@inject Microsoft.Extensions.Localization.IStringLocalizer<CreateUserDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@applicationUserDto.UserName" Label="@_localizer["Username"]" />
        <MudTextField @bind-Value="@applicationUserDto.Email" Label="@_localizer["Email"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Success" OnClick="DeleteServer">@_localizer["DeleteButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public ApplicationUserDto applicationUserDto { get; set; } = new ApplicationUserDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteServer()
    {
        MudDialog.Close(DialogResult.Ok(applicationUserDto));
    }
}