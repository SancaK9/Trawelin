
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            Delete Hotel Type?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@hotelTypeDto.Id" Label="Id" ReadOnly="true" />
        <MudTextField @bind-Value="@hotelTypeDto.Name" Label="Isim" />
      
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteCountry">Sil</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public HotelTypeDto hotelTypeDto { get; set; } = new HotelTypeDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteCountry()
    {
        MudDialog.Close(DialogResult.Ok(hotelTypeDto));
    }
}