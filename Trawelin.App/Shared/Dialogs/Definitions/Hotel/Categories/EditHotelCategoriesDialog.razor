
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            Edit Categories?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateCategoryCommand.Id" Label="Id" ReadOnly="true"/>
        <MudTextField @bind-Value="@updateCategoryCommand.Name" Label="Isim" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Info" OnClick="EditCountry">Ekle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateCategoryCommand updateCategoryCommand { get; set; } = new UpdateCategoryCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditCountry()
    {
        MudDialog.Close(DialogResult.Ok(updateCategoryCommand));
    }
}