@inject Microsoft.Extensions.Localization.IStringLocalizer<CreateHotelRoomAccomodationTypeDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@createRoomAccomodationTypeCommand.Name" Label="@_localizer["Name"]" />

        <MudTextField @bind-Value="@createRoomAccomodationTypeCommand.MinAdult" Label="@_localizer["MinAdult"]" />
        <MudTextField @bind-Value="@createRoomAccomodationTypeCommand.MaxAdult" Label="@_localizer["MaxAdult"]" />
        <MudTextField @bind-Value="@createRoomAccomodationTypeCommand.MinChildren" Label="@_localizer["MinChildren"]" />
        <MudTextField @bind-Value="@createRoomAccomodationTypeCommand.MaxChildren" Label="@_localizer["MaxChildren"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Success" OnClick="CreateCountry">@_localizer["CreateButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    public CreateRoomAccomodationTypeCommand createRoomAccomodationTypeCommand { get; set; } = new CreateRoomAccomodationTypeCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void CreateCountry()
    {
        MudDialog.Close(DialogResult.Ok(createRoomAccomodationTypeCommand));
    }
}