
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            Edit Room Accomodation Type?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.Id" Label="Id" ReadOnly="true"/>
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.Name" Label="Isim" />

        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.MinAdult" Label="MinAdult" />
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.MaxAdult" Label="MaxAdult" />
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.MinChildren" Label="MinChildren" />
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.MaxChildren" Label="MaxChildren" />

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Info" OnClick="EditCountry">Duzenle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateRoomAccomodationTypeCommand updateRoomAccomodationTypeCommand { get; set; } = new UpdateRoomAccomodationTypeCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditCountry()
    {
        MudDialog.Close(DialogResult.Ok(updateRoomAccomodationTypeCommand));
    }
}