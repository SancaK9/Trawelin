@inject Microsoft.Extensions.Localization.IStringLocalizer<EditHotelRoomAccomodationTypeDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.Id" Label="Id" ReadOnly="true"/>
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.Name" Label="@_localizer["Name"]" />

        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.MinAdult" Label="@_localizer["MinAdult"]" />
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.MaxAdult" Label="@_localizer["MaxAdult"]" />
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.MinChildren" Label="@_localizer["MinChildren"]" />
        <MudTextField @bind-Value="@updateRoomAccomodationTypeCommand.MaxChildren" Label="@_localizer["MaxChildren"]" />

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Info" OnClick="EditCountry">@_localizer["EditButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateRoomAccomodationTypeCommand updateRoomAccomodationTypeCommand { get; set; } = new UpdateRoomAccomodationTypeCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditCountry()
    {
        MudDialog.Close(DialogResult.Ok(updateRoomAccomodationTypeCommand));
    }
}