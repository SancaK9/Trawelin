@inject Microsoft.Extensions.Localization.IStringLocalizer<EditHotelAccomodationDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateAccomodationCommand.Id" Label="Id" ReadOnly="true"/>
        <MudTextField @bind-Value="@updateAccomodationCommand.Name" Label="@_localizer["Name"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Info" OnClick="EditCountry">@_localizer["EditButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateAccomodationCommand updateAccomodationCommand { get; set; } = new UpdateAccomodationCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditCountry()
    {
        MudDialog.Close(DialogResult.Ok(updateAccomodationCommand));
    }
}