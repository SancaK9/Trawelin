
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            Delete Accomodation?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@accomodationDto.Id" Label="Id" ReadOnly="true" />
        <MudTextField @bind-Value="@accomodationDto.Name" Label="Isim" />
      
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteCountry">Sil</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public AccomodationDto accomodationDto { get; set; } = new AccomodationDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteCountry()
    {
        MudDialog.Close(DialogResult.Ok(accomodationDto));
    }
}