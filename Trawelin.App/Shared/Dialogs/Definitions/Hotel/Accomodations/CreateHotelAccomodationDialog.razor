
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            Create Accomodation?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@createAccomodationCommand.Name" Label="Isim" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="CreateCountry">Ekle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    public CreateAccomodationCommand createAccomodationCommand { get; set; } = new CreateAccomodationCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void CreateCountry()
    {
        MudDialog.Close(DialogResult.Ok(createAccomodationCommand));
    }
}