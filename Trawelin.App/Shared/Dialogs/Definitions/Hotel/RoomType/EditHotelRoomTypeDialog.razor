
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            Edit Room Type?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateRoomTypeCommand.Id" Label="Id" ReadOnly="true"/>
        <MudTextField @bind-Value="@updateRoomTypeCommand.Name" Label="Isim" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Info" OnClick="EditCountry">Ekle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateRoomTypeCommand updateRoomTypeCommand { get; set; } = new UpdateRoomTypeCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditCountry()
    {
        MudDialog.Close(DialogResult.Ok(updateRoomTypeCommand));
    }
}