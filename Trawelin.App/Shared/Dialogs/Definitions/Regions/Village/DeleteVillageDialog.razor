@inject Microsoft.Extensions.Localization.IStringLocalizer<DeleteVillageDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@villageDto.Id" Label="@_localizer["DistrictId"]" ReadOnly="true" />
        <MudTextField @bind-Value="@villageDto.Name" Label="@_localizer["Name"]" />
       
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteVillage">@_localizer["DeleteButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public VillageDto villageDto { get; set; } = new VillageDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteVillage()
    {
        MudDialog.Close(DialogResult.Ok(villageDto));
    }
}