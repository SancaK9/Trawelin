
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            Delete Village?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@villageDto.Id" Label="Id" ReadOnly="true" />
        <MudTextField @bind-Value="@villageDto.Name" Label="Isim" />
       
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteVillage">Sil</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public VillageDto villageDto { get; set; } = new VillageDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteVillage()
    {
        MudDialog.Close(DialogResult.Ok(villageDto));
    }
}