
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            Edit Village?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateVillageCommand.Id" Label="Id" ReadOnly="true" />
        <MudTextField @bind-Value="@updateVillageCommand.Name" Label="Isim" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Info" OnClick="EditVillage">Duzenle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateVillageCommand updateVillageCommand { get; set; } = new UpdateVillageCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditVillage()
    {
        MudDialog.Close(DialogResult.Ok(updateVillageCommand));
    }
}