@inject Microsoft.Extensions.Localization.IStringLocalizer<EditVillageDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateVillageCommand.Id" Label="@_localizer["DistrictId"]" ReadOnly="true" />
        <MudTextField @bind-Value="@updateVillageCommand.Name" Label="@_localizer["Name"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Info" OnClick="EditVillage">@_localizer["EditButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateVillageCommand updateVillageCommand { get; set; } = new UpdateVillageCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditVillage()
    {
        MudDialog.Close(DialogResult.Ok(updateVillageCommand));
    }
}