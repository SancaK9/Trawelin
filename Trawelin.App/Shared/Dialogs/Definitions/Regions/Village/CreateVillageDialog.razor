@inject Microsoft.Extensions.Localization.IStringLocalizer<CreateVillageDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@createVillageCommand.DistrictId" Label="@_localizer["DistrictId"]" ReadOnly="true" />
        <MudTextField @bind-Value="@createVillageCommand.Name" Label="@_localizer["Name"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["Cancel"]</MudButton>
        <MudButton Color="Color.Success" OnClick="CreateVillage">@_localizer["CreateButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public CreateVillageCommand createVillageCommand { get; set; } = new CreateVillageCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void CreateVillage()
    {
        MudDialog.Close(DialogResult.Ok(createVillageCommand));
    }
}