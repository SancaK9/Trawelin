
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            Delete City?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@cityDto.Id" Label="Isim" ReadOnly="true" />
        <MudTextField @bind-Value="@cityDto.Name" Label="Isim" />

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteCity">Sil</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public CityDto cityDto { get; set; } = new CityDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteCity()
    {
        MudDialog.Close(DialogResult.Ok(cityDto));
    }
}