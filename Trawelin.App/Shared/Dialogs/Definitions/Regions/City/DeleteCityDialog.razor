@inject Microsoft.Extensions.Localization.IStringLocalizer<DeleteCityDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@cityDto.Id" Label="@_localizer["CountryId"]" ReadOnly="true" />
        <MudTextField @bind-Value="@cityDto.Name" Label="@_localizer["Name"]" />

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteCity">@_localizer["DeleteButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public CityDto cityDto { get; set; } = new CityDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteCity()
    {
        MudDialog.Close(DialogResult.Ok(cityDto));
    }
}