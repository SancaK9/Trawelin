
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            Edit City?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateCountryCommand.Id" Label="Isim" ReadOnly="true"/>
        <MudTextField @bind-Value="@updateCountryCommand.Name" Label="Isim" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Info" OnClick="EditCity">Duzenle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateCityCommand updateCountryCommand { get; set; } = new UpdateCityCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditCity()
    {
        MudDialog.Close(DialogResult.Ok(updateCountryCommand));
    }
}