@inject Microsoft.Extensions.Localization.IStringLocalizer<EditCityDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateCityCommand.Id" Label="@_localizer["CountryId"]" ReadOnly="true" />
        <MudTextField @bind-Value="@updateCityCommand.Name" Label="@_localizer["Name"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Info" OnClick="EditCity">@_localizer["EditButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateCityCommand updateCityCommand { get; set; } = new UpdateCityCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditCity()
    {
        MudDialog.Close(DialogResult.Ok(updateCityCommand));
    }
}