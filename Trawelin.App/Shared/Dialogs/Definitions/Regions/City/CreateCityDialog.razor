@inject Microsoft.Extensions.Localization.IStringLocalizer<CreateCityDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@createCityCommand.CountryId" Label="@_localizer["CountryId"]"  ReadOnly="true"/>
        <MudTextField @bind-Value="@createCityCommand.Name" Label="@_localizer["Name"]" />
        
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Success" OnClick="CreateCity">@_localizer["CreateButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public CreateCityCommand createCityCommand { get; set; } = new CreateCityCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void CreateCity()
    {
        MudDialog.Close(DialogResult.Ok(createCityCommand));
    }
}