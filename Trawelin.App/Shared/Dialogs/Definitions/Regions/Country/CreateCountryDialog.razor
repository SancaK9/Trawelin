@inject Microsoft.Extensions.Localization.IStringLocalizer<CreateCountryDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@createCountryCommand.Name" Label="@_localizer["Name"]" />
        <MudTextField @bind-Value="@createCountryCommand.Code" Label="@_localizer["Code"]" />
        <MudTextField @bind-Value="@createCountryCommand.IsoCode" Label="@_localizer["IsoCode"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Success" OnClick="CreateCountry">@_localizer["CreateButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    public CreateCountryCommand createCountryCommand { get; set; } = new CreateCountryCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void CreateCountry()
    {
        MudDialog.Close(DialogResult.Ok(createCountryCommand));
    }
}