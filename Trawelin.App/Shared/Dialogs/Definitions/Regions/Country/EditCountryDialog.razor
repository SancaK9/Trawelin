@inject Microsoft.Extensions.Localization.IStringLocalizer<EditCountryDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateCountryCommand.Id" Label="Id" ReadOnly="true"/>
        <MudTextField @bind-Value="@updateCountryCommand.Name" Label="@_localizer["Name"]" />
        <MudTextField @bind-Value="@updateCountryCommand.Code" Label="@_localizer["Code"]" />
        <MudTextField @bind-Value="@updateCountryCommand.IsoCode" Label="@_localizer["IsoCode"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Info" OnClick="EditCountry">@_localizer["EditButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateCountryCommand updateCountryCommand { get; set; } = new UpdateCountryCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditCountry()
    {
        MudDialog.Close(DialogResult.Ok(updateCountryCommand));
    }
}