
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            Edit Country?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateCountryCommand.Id" Label="Id" ReadOnly="true"/>
        <MudTextField @bind-Value="@updateCountryCommand.Name" Label="Isim" />
        <MudTextField @bind-Value="@updateCountryCommand.Code" Label="Kod" />
        <MudTextField @bind-Value="@updateCountryCommand.IsoCode" Label="IsoKod" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Info" OnClick="EditCountry">Duzenle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateCountryCommand updateCountryCommand { get; set; } = new UpdateCountryCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditCountry()
    {
        MudDialog.Close(DialogResult.Ok(updateCountryCommand));
    }
}