@inject Microsoft.Extensions.Localization.IStringLocalizer<DeleteCountryDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@countryDto.Id" Label="Id" ReadOnly="true" />
        <MudTextField @bind-Value="@countryDto.Name" Label="@_localizer["Name"]" />
        <MudTextField @bind-Value="@countryDto.Code" Label="@_localizer["Code"]" />
        <MudTextField @bind-Value="@countryDto.IsoCode" Label="@_localizer["IsoCode"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteCountry">@_localizer["DeleteButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public CountryDto countryDto { get; set; } = new CountryDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteCountry()
    {
        MudDialog.Close(DialogResult.Ok(countryDto));
    }
}