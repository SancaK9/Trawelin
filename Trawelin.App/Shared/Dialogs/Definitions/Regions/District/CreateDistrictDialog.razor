@inject Microsoft.Extensions.Localization.IStringLocalizer<CreateDistrictDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>

        <MudTextField @bind-Value="@createDistrictCommand.CityId" Label="@_localizer["CityId"]" ReadOnly="true"/>
        <MudTextField @bind-Value="@createDistrictCommand.Name" Label="@_localizer["Name"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Success" OnClick="CreateDistirct">@_localizer["CreateButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public CreateDistrictCommand createDistrictCommand { get; set; } = new CreateDistrictCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void CreateDistirct()
    {
        MudDialog.Close(DialogResult.Ok(createDistrictCommand));
    }
}