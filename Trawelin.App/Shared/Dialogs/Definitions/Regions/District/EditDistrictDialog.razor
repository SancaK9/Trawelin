
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            Edit District?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@updateDistrictCommand.Id" Label="Id" ReadOnly="true" />
        <MudTextField @bind-Value="@updateDistrictCommand.Name" Label="Isim" />

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Info" OnClick="EditDistrict">Duzenle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public UpdateDistrictCommand updateDistrictCommand { get; set; } = new UpdateDistrictCommand();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void EditDistrict()
    {
        MudDialog.Close(DialogResult.Ok(updateDistrictCommand));
    }
}