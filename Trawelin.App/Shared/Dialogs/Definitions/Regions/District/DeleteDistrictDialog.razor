
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            Delete District?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@districtDto.Id" Label="Id" ReadOnly="true" />
        <MudTextField @bind-Value="@districtDto.Name" Label="Isim" />
       
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteDistrict">Sil</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public DistrictDto districtDto { get; set; } = new DistrictDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteDistrict()
    {
        MudDialog.Close(DialogResult.Ok(districtDto));
    }
}