@inject Microsoft.Extensions.Localization.IStringLocalizer<DeleteDistrictDialog> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            @_localizer["Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@districtDto.Id" Label="@_localizer["CityId"]" ReadOnly="true" />
        <MudTextField @bind-Value="@districtDto.Name" Label="@_localizer["Name"]" />
       
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["CancelButton"]</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteDistrict">@_localizer["DeleteButton"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public DistrictDto districtDto { get; set; } = new DistrictDto();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteDistrict()
    {
        MudDialog.Close(DialogResult.Ok(districtDto));
    }
}