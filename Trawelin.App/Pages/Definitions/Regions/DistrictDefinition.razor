@page "/districtdefinition/{id}"
@inject Microsoft.Extensions.Localization.IStringLocalizer<DistrictDefinition> _localizer

<ComponentTitle Title="Districts" Description="Manage Districts" />
@if (IsTaskRunning)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudDataGrid T="DistrictDto" @ref="_mudTable" MultiSelection="true" Items="@districtList" SortMode="SortMode.Multiple" Filterable="true"
             QuickFilter="@_quickFilter" Hideable="true" SelectedItemsChanged="@SelectedItemsChanged" Striped="true" Bordered="true">
        <ToolBarContent>
            <MudButton Style="margin-left:10px" Variant="Variant.Filled" OnClick="CreateButton" EndIcon="@Icons.Material.Filled.Send" Color="Color.Primary">@_localizer["CreateButton"]</MudButton>

            <MudButton Style="margin-left:10px" Variant="Variant.Filled" OnClick="DeleteButton" Disabled="!buttonActive" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error">@_localizer["DeleteButton"]</MudButton>

            <MudButton Style="margin-left:10px" Variant="Variant.Filled" OnClick="EditButton" Disabled="!buttonActive" EndIcon="@Icons.Material.Filled.Edit" Color="Color.Info">@_localizer["EditButton"]</MudButton>

            <MudButton Style="margin-left:10px" Variant="Variant.Filled" OnClick="GoToVillageButton" Disabled="!buttonActive" EndIcon="@Icons.Material.Filled.ArrowRight" Color="Color.Info">@_localizer["GoToButton"]</MudButton>

            <MudTextField @bind-Value="_searchString" Placeholder="@_localizer["Search"]" Adornment="Adornment.Start" Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <Columns>
            <SelectColumn T="DistrictDto" />
            <Column T="DistrictDto" Field="Id" Title="Id" Sortable="false" Filterable="false" IsEditable="false" />

            <Column T="DistrictDto" Field="Name" Title="@_localizer["District"]" Sortable="false" Filterable="false" IsEditable="false" />

        </Columns>
        <PagerContent>
            <MudDataGridPager T="DistrictDto" />
        </PagerContent>
    </MudDataGrid>
}

@code {
    [Parameter]
    public string id { get; set; }

    //DataGrid Table
    private MudDataGrid<DistrictDto> _mudTable;

    //DataGrid Data
    private List<DistrictDto> districtList = new List<DistrictDto>();
    private List<DistrictDto> selectedItems;

    //Button Active Check
    bool buttonActive = false;

    //Search Bar String
    string _searchString;

    //Dialog Settings
    DialogOptions options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, DisableBackdropClick = true };


    bool IsTaskRunning = true;

    //Quick Filter
    private Func<DistrictDto, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.Name.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    };

    protected override async Task OnInitializedAsync()
    {
        //Set Bearer if Auth Null
        if (_httpClient.DefaultRequestHeaders.Authorization?.Scheme != "Bearer")
        {
            _httpClient.DefaultRequestHeaders.Add(StorageConstants.Local.headerName, "Bearer " + await _localStorage.GetItemAsync<string>(StorageConstants.Local.AuthToken));
        }

        //Get District From Service
        var response = await _regionManager.GetDistrictByCityIdAsync(int.Parse(id));
        IsTaskRunning = false;
        if (response.Succeeded == true)
        {
            districtList = response.Data.ToList();
        }
        else
        {
            Snackbar.Add(response.Error.Message, Severity.Error);
        }
    }


    void SelectedItemsChanged(HashSet<DistrictDto> items)
    {
        selectedItems = items.ToList();
        buttonActive = selectedItems.Count == 1;
    }



    async Task DeleteButton()
    {
        //Get Selected Item From Datatable
        DistrictDto districtDto = selectedItems[0];

        //Dialog Parameter
        var parameters = new DialogParameters { ["districtDto"] = districtDto };
        
        //Dialog
        var dialog = DialogService.Show<DeleteDistrictDialog>("Delete District", parameters, options);
        
        //Dialog Result
        var result = await dialog.Result;
        DistrictDto modalData = result.Data as DistrictDto;
        
        if (!result.Cancelled)
        {
            try
            {
                var response = await _regionManager.DeleteDistrictAsync(modalData.Id);
                if (response.Succeeded)
                {
                    _mudTable.SetSelectedItemAsync(districtDto);
                    districtList.Remove(districtDto);
                    Snackbar.Add("Isleminiz Basarili", Severity.Success);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add(ex.Message, Severity.Error);
            }
        }

    }

    async Task EditButton()
    {
        //Get Selected Item From Datatable
        DistrictDto districtDto = selectedItems[0];

        //Dialog Parameter
        UpdateDistrictCommand updateDistrictCommand = _mapper.Map<UpdateDistrictCommand>(districtDto);
        var parameters = new DialogParameters { ["updateDistrictCommand"] = updateDistrictCommand };
        
        //Dialog
        var dialog = DialogService.Show<EditDistrictDialog>("Edit District", parameters, options);
        
        //Dialog Result
        var result = await dialog.Result;
        UpdateDistrictCommand modalData = result.Data as UpdateDistrictCommand;

        if (!result.Cancelled)
        {
            try
            {
                var response = await _regionManager.UpdateDistrictAsync(updateDistrictCommand);
                if (response.Succeeded)
                {
                    districtList.Remove(districtDto);
                    districtList.Add(response.Data);
                    _mudTable.SetSelectedItemAsync(districtDto);
                    Snackbar.Add("Isleminiz Basarili", Severity.Success);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add(ex.Message, Severity.Error);
            }
        }

    }

    async Task CreateButton()
    {
        CreateDistrictCommand district = new();

        //Dialog Parameter
        //Set Current City Id
        district.CityId = int.Parse(id);
        var parameters = new DialogParameters { ["createDistrictCommand"] = district };

        //Dialog
        var dialog = DialogService.Show<CreateDistrictDialog>("Create District", parameters, options);
        
        //Dialog Result
        var result = await dialog.Result;

        if (!result.Cancelled)
        {
            try
            {
                CreateDistrictCommand createDistrictCommand = result.Data as CreateDistrictCommand;
                DistrictDto districtDto = _mapper.Map<DistrictDto>(createDistrictCommand);
                var response = await _regionManager.CreateDistrictAsync(createDistrictCommand);
                if (response.Succeeded)
                {
                    if (response.Succeeded)
                    {
                        districtList.Add(response.Data);
                        Snackbar.Add("Isleminiz Basarili", Severity.Success);
                    }
                    else
                    {
                        Snackbar.Add(response.Error.Message, Severity.Error);
                    }
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add(ex.Message, Severity.Error);
            }
        }

    }

    async Task GoToVillageButton()
    {
        _navigationManager.NavigateTo("villagedefinition" + "/" + selectedItems[0].Id);

    }

}