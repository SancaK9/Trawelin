@page "/suppliersdefinition"
@using Trawelin.App.Shared.Dialogs.Definitions.Suppliers
@inject Microsoft.Extensions.Localization.IStringLocalizer<SuppliersDefinition> _localizer

@if (IsTaskRunning)
{
	<MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}else{
<MudDataGrid T="SupplierDto" @ref="_mudTable" MultiSelection="true" Items="@suppliersList" SortMode="SortMode.Multiple" Filterable="true"
             QuickFilter="@_quickFilter" Hideable="true" SelectedItemsChanged="@SelectedItemsChanged" Striped="true" Bordered="true">
    <ToolBarContent>
            <MudButton Style="margin-left:10px" Variant="Variant.Filled" OnClick="CreateButton" EndIcon="@Icons.Material.Filled.Send" Color="Color.Primary">@_localizer["CreateButton"]</MudButton>

        <MudButton Style="margin-left:10px" Variant="Variant.Filled" OnClick="DeleteButton" Disabled="!deleteActive" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error">@_localizer["DeleteButton"]</MudButton>

        <MudButton Style="margin-left:10px" Variant="Variant.Filled" OnClick="EditButton" Disabled="!editActive" EndIcon="@Icons.Material.Filled.Edit" Color="Color.Info">@_localizer["EditButton"]</MudButton>


        <MudSpacer />
            <MudText Typo="Typo.h4">@_localizer["Title"]</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="@_localizer["Search"]" Adornment="Adornment.Start" Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <SelectColumn T="SupplierDto" />
        <Column T="SupplierDto" Field="Id" Title="Id" Sortable="false" Filterable="false" IsEditable="false" />

            <Column T="SupplierDto" Field="Title" Title="@_localizer["Name"]" Sortable="false" Filterable="false" IsEditable="false" />
        
        <Column T="SupplierDto" Field="TaxNum" Title="@_localizer["TaxNumber"]" Sortable="false" Filterable="false" IsEditable="false" />

            <Column T="SupplierDto" Field="Address" Title="@_localizer["Address"]" Sortable="false" Filterable="false" IsEditable="false" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="SupplierDto" />
    </PagerContent>
</MudDataGrid>
}

@code {

    //DataGrid Table
    private MudDataGrid<SupplierDto> _mudTable;
    //DataGrid Data
    List<SupplierDto> selectedItems;
    List<SupplierDto> suppliersList = new List<SupplierDto>();

    //Button Active Check
    bool editActive = false;
    bool deleteActive = false;

    //Search Bar String
    string _searchString;

    bool IsTaskRunning = true;


    private Func<SupplierDto, bool> _quickFilter => x =>
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        if (x.Title.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (x.TaxNum.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        if (x.Address.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    };


    void SelectedItemsChanged(HashSet<SupplierDto> items)
    {

        selectedItems = items.ToList();

        editActive = selectedItems.Count == 1;
        deleteActive = selectedItems.Count > 0;
    }

    protected override async Task OnInitializedAsync()
    {
        if (_httpClient.DefaultRequestHeaders.Authorization?.Scheme != "Bearer")
        {
            _httpClient.DefaultRequestHeaders.Add(StorageConstants.Local.headerName, "Bearer " + await _localStorage.GetItemAsync<string>(StorageConstants.Local.AuthToken));
        }
        //Service Init
        Client service = new Client("https://api.trawelin.com", _httpClient);
        //Get Token From Service
        var response = await _suppliersManager.GetSuppliersAsync();
        IsTaskRunning = false;
        if (response.Succeeded == true)
        {
            suppliersList = response.Data.ToList();
        }
    }





    
    async Task DeleteButton()
    {
        SupplierDto supplierDto = selectedItems[0];
        var parameters = new DialogParameters { ["supplierDto"] = supplierDto };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, DisableBackdropClick = true };
        var dialog = DialogService.Show<DeleteSupplierDialog>("Delete Suppliers", parameters,options);
        var result = await dialog.Result;
        SupplierDto modalData = result.Data as SupplierDto;

        if (!result.Cancelled)
        {
            try
            {
                var response = await _suppliersManager.DeleteSupplierAsync(modalData.Id);
                if (response.Succeeded)
                {

                    _mudTable.SetSelectedItemAsync(supplierDto);
                    suppliersList.Remove(supplierDto);
                    Snackbar.Add("Isleminiz Basarili", Severity.Success);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add(ex.Message, Severity.Error);
            }
        }

    }

    async Task EditButton()
    {
        SupplierDto supplierDto = selectedItems[0];
        UpdateSupplierCommand updateSupplierCommand = _mapper.Map<UpdateSupplierCommand>(supplierDto);
        var parameters = new DialogParameters { ["updateSupplierCommand"] = updateSupplierCommand };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, DisableBackdropClick = true };
        var dialog = DialogService.Show<EditSupplierDialog>("Edit Supplier", parameters,options);
        var result = await dialog.Result;
        UpdateSupplierCommand modalData = result.Data as UpdateSupplierCommand;

        if (!result.Cancelled)
        {
            try
            {
                var response = await _suppliersManager.UpdateSupplierAsync(modalData);
                if (response.Succeeded)
                {
                    suppliersList.Remove(supplierDto);
                    suppliersList.Add(response.Data);
                    _mudTable.SetSelectedItemAsync(supplierDto);
                    Snackbar.Add("Isleminiz Basarili", Severity.Success);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add(ex.Message, Severity.Error);
            }
        }

    }

    async Task CreateButton()
    {
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, DisableBackdropClick = true };

        var dialog = DialogService.Show<CreateSupplierDialog>("Create Supplier",options);
        var result = await dialog.Result;


        if (!result.Cancelled)
        {
            try
            {
                CreateSupplierCommand createSupplierCommand = result.Data as CreateSupplierCommand;
                SupplierDto supplierDto = _mapper.Map<SupplierDto>(createSupplierCommand);
                var response = await _suppliersManager.CreateSupplierAsync(createSupplierCommand);
                if (response.Succeeded)
                {
                    if (response.Succeeded)
                    {
                        suppliersList.Add(response.Data);
                        Snackbar.Add("Isleminiz Basarili", Severity.Success);
                    }
                    else
                    {
                        Console.Write(response.Error.Message);
                    }
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add(ex.Message, Severity.Error);
            }
        }

    }





}